<div class="container">
  <div class="card_devise">
    <h2>Log in</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="row">
        <div class="form-actions">
          <%= f.button :submit, "Log in",class: "btn btn-ghost mt-1 ml-2"%>
        </div>
        <div class="form-actions">
          <%= link_to "Sign Up", new_user_registration_path,class: "btn btn-ghost mt-1"%>
          <%= link_to "Back", "/",class: "btn btn-ghost mt-1"%> 
        </div>
      </div>
    <% end %>
  </div>
</div>

<%#= render "devise/shared/links" %>
